@{
    ViewBag.Title = "Progress";
    Layout = null;
}

<div class="row">
    <div id="hero" class="offset-1" style="display: inline-grid;">
        <table class="table table-striped">
        </table>
    </div>
    <div id="div_list_adversaire_ts" class="col-2 offset-1" style="background-color: lightgrey; height: fit-content;">
        <ul style="list-style-type:none; display: inline;">
        </ul>
    </div>
</div>
<hr />
<div class="offset-4" style="display: inline-grid;">
    <button style="margin-left: 38.195px;" value="Engager vous qui disaient" id="suivant" disabled>Suivant</button>
</div>



<script>
    $('#hero').on("change", ":input", function () {
        var cb = $(this);
        var id = cb.attr("id");
        var res = id.split("-");
        if (res[1] == 1) {
            uncheck1 = res[0] + '-2';
            uncheck2 = res[0] + '-3';
        }
        if (res[1] == 2) {
            uncheck1 = res[0] + '-1';
            uncheck2 = res[0] + '-3';
        }
        if (res[1] == 3) {
            uncheck1 = res[0] + '-1';
            uncheck2 = res[0] + '-2';
        }
        $('#' + uncheck1).prop('checked', false).trigger("customChange");
        $('#' + uncheck2).prop('checked', false).trigger("customChange");
    })
</script>

